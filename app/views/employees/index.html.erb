<h1>Employees</h1>

<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filters <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <% Group.all.each do |group| %>
          <li><%= link_to group.name.titleize, "employees?group=#{group.name}" %>
        </li>
    <% end %>
  </ul>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Job Title</th>
      <th>Salary</th>
      <th>Gender</th> 
      <th>View</th>  
    </tr>
  </thead>
<% @employees.each do |employee| %>
  <tbody>
    <tr>
      <td><%= employee.first_name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.email %></td>
      <td><%= employee.japan_phone %></td>
      <td><%= employee.job_title %></td>
      <td><%= employee.salary_currency %></td>
      <td><%= employee.gender %></td>  
      <td>
        <%= link_to "View", "/employees/#{employee.id}", class: "btn btn-default" %>
      </td> 
    </tr>
  </tbody>
  <br>
<% end %>
</table>
<%= link_to "Add new employee", "/employees/new", class: "btn btn-default" %>